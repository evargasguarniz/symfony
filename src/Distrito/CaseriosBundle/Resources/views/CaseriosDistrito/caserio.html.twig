{# src/Distrito/DistritoBundle/Resouces/views/Caserios/index.html.twig #}
{% extends 'DistritoCaseriosBundle::base.thml.twig' %}
{% block title %} Home {% endblock %}
	{% block body %}
		<section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        
                          <!--<ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                          </ol>-->

                          <!-- Wrapper for slides -->
                          <div class="carousel-inner id-img-head" role="listbox">
                                {% for galeria in gallery %}
                                <div class="item">
                                  <img src="{{ asset('img/')}}{{galeria.imgGaleria}}" alt="...">
                                  <div class="carousel-caption">
                                    {{galeria.descripcion}}
                                  </div>
                                </div>
                              {% endfor %}
                          </div>

                              <!-- Controls -->
                              <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                              <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                              </a>

                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row form-search-page">
                    <form class="form-inline text-center">
                        <div class="col-xs-7  col-sm-7 col-md-7 col-lg-7">
                            <div class="form-group pull-right">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                    <input type="text" class="form-control " id="exampleInputAmount" placeholder="Buscar Caserio">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-5  col-sm-5  col-md-5 col-lg-5">
                             <button type="submit" class="btn btn-primary pull-left">Busqueda</button>
                        </div>
                    </form>
                </div>
            </div>
             
           
            <div class="container container-xs-alter" >
                <div class="row">
                {% for caserios in entity %}
                    <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
                        <h4 class="text-center view-color-05a9e8">
                        <a href="{{ path('detalle_caserio',{'id':caserios.id}) }}">{{ caserios.nombre }}</a></h4>
                        <div class="thumbnail">
                            <img src="{{ asset('img/')}}{{caserios.imgGaleria }}" class="img-responsive img-rounded" alt="Responsive image">
                            <div class="caption">
                                <p> {{caserios.descripcion | slice(0,200)}} <strong>...</strong> </p>
                                <div class="container-page">
                                    <a class="btn-generic" href="{{ path('detalle_caserio',{'id':caserios.id}) }}">Ver mas > </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}




                </div>
            </div>
            
        </section>
       
    
       


        
	{% endblock %}
		
	

